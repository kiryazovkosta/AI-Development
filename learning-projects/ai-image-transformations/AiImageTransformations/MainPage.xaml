<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:vm="clr-namespace:AiImageTransformations.ViewModels"
    x:Class="AiImageTransformations.MainPage"
    x:DataType="vm:MainViewModel">

    <Grid RowDefinitions="Auto,Auto,*" Padding="24" RowSpacing="16">
        <Label
            Grid.Row="0"
            Text="{Binding Title}"
            FontSize="36"
            FontAttributes="Bold"
            HorizontalOptions="Center"
            SemanticProperties.HeadingLevel="Level1" />

        <Button
            Grid.Row="1"
            Text="Upload"
            Command="{Binding PickImageCommand}"
            HorizontalOptions="Center" />

        <Border
            Grid.Row="2"
            Stroke="{AppThemeBinding Light=Gray, Dark=DimGray}"
            StrokeThickness="1"
            StrokeShape="RoundRectangle 12"
            Padding="12"
            HorizontalOptions="Fill"
            VerticalOptions="Fill">
            <Grid>
                <Image
                    Source="{Binding SelectedImage}"
                    IsVisible="{Binding HasImage}"
                    Aspect="AspectFit" />

                <Label
                    Text="Select an image to begin"
                    IsVisible="{Binding HasNoImage}"
                    HorizontalOptions="Center"
                    VerticalOptions="Center" />
            </Grid>
        </Border>
    </Grid>

</ContentPage>
